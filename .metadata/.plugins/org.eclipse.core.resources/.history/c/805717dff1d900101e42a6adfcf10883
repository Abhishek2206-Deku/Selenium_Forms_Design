package seleniumdesign.selenium_framework_design.pom;

import org.openqa.selenium.By;
import org.openqa.selenium.Keys;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;

import selenium_framework_design_AbstractComponents.AbstractComponents;

public class FormsPage extends AbstractComponents {

	WebDriver driver;

	public FormsPage(WebDriver driver) {
		super(driver);
		this.driver = driver;

		PageFactory.initElements(driver, this);
	}

	@FindBy(id = "name")
	WebElement userName;

	@FindBy(id = "emaill")
	WebElement email;

	@FindBy(xpath = "//label[text()='Male']/preceding-sibling::input")
	WebElement gender;

	@FindBy(id = "mobile")
	WebElement mobile;

	@FindBy(id = "subjects")
	WebElement subjects;

	@FindBy(xpath = "//label[text()='Sports']/preceding-sibling::input")
	WebElement sports;

	@FindBy(id = "dob")
	WebElement dateInput;

	// driver.findElement(By.xpath("//input[@id='picture']"))

	@FindBy(xpath = "//input[@id='picture']")
	WebElement picture;

	@FindBy(xpath = "//textarea[@id='picture']")
	WebElement currentAddress;

	@FindBy(id = "state")
	WebElement stateSelect;

	@FindBy(id = "city")
	WebElement citySelect;

	@FindBy(xpath = "//input[@type='submit']")
	WebElement submit;

	// ---------- Reusable Action Methods ---------- //

	public void enterName(String name) {
		userName.sendKeys(name);
	}

	public void enterEmail(String mail) {
		email.sendKeys(mail);
	}

	public void selectGender() {
		gender.click();
	}

	public void enterMobile(String number) {
		mobile.sendKeys(number);
	}

	public void enterSubject(String sub) {
		subjects.sendKeys(sub);
		subjects.sendKeys(Keys.ENTER);
	}

	public void selectSports() {
		sports.click();
	}

	public void enterDOB(String dob) {
		dateInput.sendKeys(dob);
	}

	public void uploadPicture(String path) {
		scrollIntoView(picture);
		picture.sendKeys(path);
	}

	public void currentAddress(String address) {
		scrollIntoView(currentAddress);
		currentAddress.sendKeys(address);
	}

	public void selectState(String state) {
		scrollIntoView(stateSelect);
		stateSelect.click();
		stateSelect.sendKeys(state);
		stateSelect.sendKeys(Keys.ENTER);
	}

	public void selectCity(String city) {
		scrollIntoView(citySelect);
		citySelect.click();
		citySelect.sendKeys(city);
		citySelect.sendKeys(Keys.ENTER);
	}

	public void submitForm() {
		scrollIntoView(submit);
		submit.click();
	}

}
